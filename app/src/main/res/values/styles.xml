<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleProfile" >

        <item name="android:layout_marginTop">1dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:background">@drawable/background_txt</item>
    </style>

    <style name="styleTxtProfile" >

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">@dimen/subtitleTextMinus</item>
    </style>

</resources>